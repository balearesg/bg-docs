{
	"version": "1.0.0",
	"scope": "bg",
	"name": "docs",
	"title": "BG Docs",
	"template": "template/template.json",
	"languages": {
		"default": "en",
		"supported": [
			"en",
			"es"
		]
	},
	"modules": {
		"path": "modules"
	},
	"libraries": {
		"imports": [
			"@bg/auth-api",
			"@bg/auth-models",
			"@bg/mailer",
			"@jadmin/ui"
		]
	},
	"params": {
		"application": {
			"token": "docsbg"
		}
	},
	"static": {
		"includes": [
			"assets",
			"modules/content/mdx"
		]
	},
	"deployment": {
		"distributions": [
			{
				"name": "web",
				"platform": "web",
				"ports": {
					"bundles": 3001
				},
				"default": true,
				"environment": "development",
				"backend": "backend"
			},
			{
				"name": "backend",
				"platform": "backend",
				"environment": "development",
				"ports": {
					"bundles": 3004,
					"http": 3009,
					"inspect": 3006
				},
				"default": false,
				"ts": {
					"compiler": "tsc"
				}
			}
		]
	}
}